{
  "name": "n8n-nodes-centrifuge",
  "version": "1.0.0",
  "description": "n8n community nodes for Centrifuge blockchain - Real World Asset (RWA) tokenization platform built on Substrate/Polkadot",
  "keywords": [
    "n8n-community-node-package",
    "n8n",
    "centrifuge",
    "blockchain",
    "substrate",
    "polkadot",
    "rwa",
    "real-world-assets",
    "defi",
    "tokenization",
    "tinlake",
    "pools",
    "tranches",
    "loans",
    "nft"
  ],
  "license": "BUSL-1.1",
  "homepage": "https://github.com/Velocity-BPA/n8n-nodes-centrifuge",
  "author": {
    "name": "Velocity BPA",
    "email": "licensing@velobpa.com",
    "url": "https://velobpa.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Velocity-BPA/n8n-nodes-centrifuge.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc && gulp build:icons",
    "dev": "tsc --watch",
    "format": "prettier --write .",
    "lint": "eslint nodes credentials --ext .ts",
    "lint:fix": "eslint nodes credentials --ext .ts --fix",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/CentrifugeNetwork.credentials.js",
      "dist/credentials/CentrifugeApi.credentials.js",
      "dist/credentials/IpfsStorage.credentials.js"
    ],
    "nodes": [
      "dist/nodes/Centrifuge/Centrifuge.node.js",
      "dist/nodes/Centrifuge/CentrifugeTrigger.node.js"
    ]
  },
  "dependencies": {
    "@polkadot/api": "^12.0.0",
    "@polkadot/keyring": "^12.6.0",
    "@polkadot/types": "^12.0.0",
    "@polkadot/util": "^12.6.0",
    "@polkadot/util-crypto": "^12.6.0",
    "axios": "^1.6.0",
    "form-data": "^4.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.15.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-n8n-nodes-base": "^1.16.1",
    "gulp": "^4.0.2",
    "jest": "^29.7.0",
    "n8n-workflow": "*",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2"
  },
  "peerDependencies": {
    "n8n-workflow": "*"
  }
}
